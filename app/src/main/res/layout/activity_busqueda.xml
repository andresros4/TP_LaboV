<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alumno.clase4.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1B1918"
            android:textSize="24sp"
            android:id="@+id/tvNombreBuscado"
            android:text="Producto seleccionado"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvIngredientesBuscado"
            android:textSize="16sp"
            android:textColor="#1B1918"
            android:text="Ingredientes"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1B1918"
            android:textSize="16sp"
            android:id="@+id/tvInstruccionesBuscado"
            android:text="Instrucciones"
            />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnCompartirBuscado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:backgroundTint="#FFFFFF"
            android:src="@drawable/share"/>
    </LinearLayout>

   </RelativeLayout>
